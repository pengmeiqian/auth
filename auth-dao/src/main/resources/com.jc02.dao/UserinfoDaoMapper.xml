<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jc02.dao.UserinfoDao">
    <insert id="insertUser"  parameterType="Userinfo">
        INSERT INTO userinfo VALUES (#{uid},#{uname},#{upass},#{ustatus})
    </insert>
    <delete id="deleteUser" parameterType="String">
        DELETE FROM userinfo where uid=#{uid}
    </delete>
    <update id="updateUser" parameterType="String" >
        UPDATE userinfo SET upass=#{upass},ustatus=#{ustatus} WHERE uid=#{uid}
    </update>
    <select id="findAllUser" resultType="Userinfo">
        SELECT * FROM userinfo
    </select>
    <select id="findUser" parameterType="String" resultType="Userinfo">
        SELECT * FROM userinfo WHERE uid=#{uid}
    </select>
</mapper>
